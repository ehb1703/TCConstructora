<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fleet_vehicle_model_type_from" model="ir.ui.view">
        <field name="name">view.fleet.vehicle.model.type.from</field>
        <field name="model">fleet.vehicle.model</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_model_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vehicle_type']" position="replace">
                <field name="type_id" options="{'no_open': 1,'no_create':1,'no_create_edit':1}"/>
            </xpath>
        </field>
    </record>

    <record id="view_fleet_vehicle_company_from" model="ir.ui.view">
        <field name="name">view.fleet.vehicle.company.from</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vehicle_properties']" position="after">
