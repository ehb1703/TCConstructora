                        <field name="companyresg_id" options="{'no_open': 1,'no_create':1,'no_create_edit':1}"/>
                    </group>
                    <group>
                        <field name="companyaseg_id" options="{'no_open': 1,'no_create':1,'no_create_edit':1}"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>