<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fleet_vehicle_model_type_from" model="ir.ui.view">
        <field name="name">view.fleet.vehicle.model.type.from</field>
        <field name="model">fleet.vehicle.model</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_model_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vehicle_type']" position="replace">
                <field name="type_id" options="{'no_open': 1,'no_create':1,'no_create_edit':1}"/>
            </xpath>
        </field>
    </record>

    <record id="view_fleet_vehicle_company_from" model="ir.ui.view">
        <field name="name">view.fleet.vehicle.company.from</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']" position="replace">
                <div class="oe_title">
                    <label for="code"/>
                    <h1><field name="code"/></h1>
                    <label for="model_id"/>
                    <h1><field name="model_id" placeholder="e.g. Model S" class="w-100"/></h1>
                    <label for="license_plate"/>
                    <h2><field name="license_plate" class="oe_inline" placeholder="e.g. PAE 326"/></h2>
                    <label for="tag_ids" class="me-3"/>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='vehicle_type']" position="replace">
                <field name="type_fleet" readonly="1"/>
                <field name="eqstate_id" options="{'no_open': 1,'no_create':1,'no_create_edit':1}"/>
            </xpath>
            <xpath expr="//field[@name='vin_sn']" position="replace">
                <field name="vin_sn" string="No. de Serie"/>
                <field name="no_motor"/>
            </xpath>
            <xpath expr="//field[@name='vehicle_properties']" position="after">
                <group string="Seguros" col="2">
                    <group>
                        <field name="companyresg_id" options="{'no_open': 1,'no_create':1,'no_create_edit':1}"/>
                        <field name="companyaseg_id" options="{'no_open': 1,'no_create':1,'no_create_edit':1}"/>
                    </group>
                    <group>
                        <field name="aseguradora_id" options="{'no_open': 1,'no_create':1,'no_create_edit':1}"/>
                        <field name="poliza"/>
                        <field name="inciso"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
