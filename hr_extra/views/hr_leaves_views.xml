<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_hr_leave_vacation_days" model="ir.actions.act_window">
        <field name="name">Días de vacaciones</field>
        <field name="res_model">hr.leave.vacation.days</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_hr_leave_vacation_days_list" model="ir.ui.view">
        <field name="name">view.hr.leave.vacation.days.list</field>
        <field name="model">hr.leave.vacation.days</field>
        <field name="arch" type="xml">
            <list string="Días de vacaciones" editable="top">
                <field name="numinical"/>
                <field name="numfinal"/>
                <field name="numdias"/>
            </list>
        </field>
    </record>

    <record id="view_hr_leave_vacation_days_form" model="ir.ui.view">
        <field name="name">view.hr.leave.vacation.days.form</field>
        <field name="model">hr.leave.vacation.days</field>
        <field name="arch" type="xml">
            <form string="Días de vacaciones">
                <sheet>
                    <group>
                        <group>
                            <field name="numinical"/>
                            <field name="numfinal"/>
                            <field name="numdias"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <menuitem id="menu_hr_leave_vacation_days" action="action_hr_leave_vacation_days" name="Días de vacaciones" parent="hr_holidays.menu_hr_holidays_configuration" groups="hr_holidays.group_hr_holidays_manager" sequence="10"/>
</odoo>