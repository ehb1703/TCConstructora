<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_requisition_debt" model="ir.actions.act_window">
        <field name="name">Adeudo</field>
        <field name="res_model">requisition.debt</field>
        <field name="view_mode">list,kanban,form</field>
    </record>

    <record id="view_requisition_debt_list" model="ir.ui.view">
        <field name="name">view.requisition.debt.list</field>
        <field name="model">requisition.debt</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <list string="Adeudo" create="0" delete="0" edit="0">
                <field name="partner_id"/>
                <field name="amount_total"/>
            </list>
        </field>
    </record>

    <record id="view_requisition_debt_form" model="ir.ui.view">
        <field name="name">view.requisition.debt.form</field>
        <field name="model">requisition.debt</field>
        <field name="arch" type="xml">
            <form string="Adeudo" create="0" delete="0" edit="0">
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="amount_total"/>
                    </group>
                    <notebook>
                        <page string="Movimientos">
                            <field name="line_ids" widget="one2many_list">
                                <list create="false" delete="false" edit="false">
                                    <field name="project_id"/>
                                    <field name="fecha"/>
                                    <field name="debit"/>
                                    <field name="credit"/>
                                    <field name="origen"/>
                                    <field name="concepto"/>
                                </list>
                                <form><p>Información no disponible a través de esta vista</p></form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_requisition_bank_account" model="ir.actions.act_window">
        <field name="name">Cuentas bancarias</field>
        <field name="res_model">requisition.bank.account</field>
        <field name="view_mode">list,kanban,form</field>
    </record>

    <record id="view_requisition_bank_account_list" model="ir.ui.view">
        <field name="name">view.requisition.bank.account.list</field>
        <field name="model">requisition.bank.account</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <list string="Cuentas bancarias" create="0" delete="0" edit="1">
                <field name="company_id"/>
                <field name="res_bank"/>
                <field name="res_partner_bank"/>
                <field name="obsolete"/>
            </list>
        </field>
    </record>

    <record id="view_requisition_bank_account_form" model="ir.ui.view">
        <field name="name">view.requisition.bank.account.form</field>
        <field name="model">requisition.bank.account</field>
        <field name="arch" type="xml">
            <form string="Cuentas bancarias" create="0" delete="0" edit="1">
                <sheet>
                    <group>
                        <group>
                            <field name="company_id" readonly="1"/>
                            <field name="res_bank" readonly="1"/>
                        </group>
                        <group>
                            <field name="res_partner_bank" readonly="1"/>
                            <field name="obsolete" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <menuitem id="menu_movimientos" name="Movimientos" groups="group_requisition_admin" parent="reports_menu_root" sequence="20">
        <menuitem id="menu_requisition_bank_account" name="Cuentas bancarias" action="action_requisition_bank_account" sequence="1"/>
        <menuitem id="menu_requisition_debt" name="Adeudo" action="action_requisition_debt" sequence="10"/>
    </menuitem>
</odoo>