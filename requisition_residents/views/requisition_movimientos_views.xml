<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_requisition_debt" model="ir.actions.act_window">
        <field name="name">Estado de Cuenta</field>
        <field name="res_model">requisition.debt</field>
        <field name="view_mode">list,kanban,form</field>
    </record>

    <record id="view_requisition_debt_list" model="ir.ui.view">
        <field name="name">view.requisition.debt.list</field>
        <field name="model">requisition.debt</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <list string="Estado de Cuenta" create="0" delete="0" edit="1">
                <field name="partner_id"/>
                <field name="amount_total"/>
            </list>
        </field>
    </record>

    <record id="view_requisition_debt_form" model="ir.ui.view">
        <field name="name">view.requisition.debt.form</field>
        <field name="model">requisition.debt</field>
        <field name="arch" type="xml">
            <form string="Estado de Cuenta" create="0" delete="0" edit="1">
                <sheet>
                    <group>
                        <field name="partner_id" readonly="1" options="{'no_open':True, 'no_create':True, 'no_edit':True}"/>
                        <field name="amount_total" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Movimientos">
                            <field name="line_ids" widget="one2many_list">
                                <list create="false" delete="false" editable="bottom">
                                    <field name="recibo_name" column_invisible="True"/>
                                    <field name="project_id" readonly="1" options="{'no_open':True, 'no_create':True, 'no_edit':True}"/>
                                    <field name="fecha" readonly="1"/>
                                    <field name="debit" readonly="1"/>
                                    <field name="credit" readonly="1"/>
                                    <field name="origen" readonly="1"/>
                                    <field name="concepto" readonly="1"/>
                                    <field name="type_pay" readonly="1"/>
                                    <field name="account_id" readonly="1"/>
                                    <field name="recibo" filename="recibo_name" widget="binary" invisible="debit > 0.00"/>
                                    <field name="comprobantes_ids" widget="many2many_binary" invisible="debit > 0.00"/>
                                    <field name="observaciones" invisible="debit > 0.00"/>
                                </list>
                                <form><p>Información no disponible a través de esta vista</p></form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_requisition_bank_account" model="ir.actions.act_window">
        <field name="name">Diario - Cuentas bancarias</field>
        <field name="res_model">requisition.bank.account</field>
        <field name="view_mode">list,kanban,form</field>
    </record>

    <record id="view_requisition_bank_account_list" model="ir.ui.view">
        <field name="name">view.requisition.bank.account.list</field>
        <field name="model">requisition.bank.account</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <list string="Diario - Cuentas bancarias" create="0" delete="0" edit="1">
                <field name="company_id"/>
                <field name="res_bank"/>
                <field name="res_partner_bank"/>
                <field name="balance" widget="monetary"/>
                <field name="obsolete"/>
            </list>
        </field>
    </record>

    <record id="view_requisition_bank_account_form" model="ir.ui.view">
        <field name="name">view.requisition.bank.account.form</field>
        <field name="model">requisition.bank.account</field>
        <field name="arch" type="xml">
            <form string="Diario - Cuentas bancarias" create="0" delete="0" edit="1">
                <header>
                    <button string="Agregar" name="action_agregar" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="company_id" readonly="1"/>
                            <field name="res_bank" readonly="1"/>
                        </group>
                        <group>
                            <field name="res_partner_bank" readonly="1"/>
                            <field name="obsolete" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Movimientos">
                            <field name="line_ids" widget="one2many_list">
                                <list create="False" delete="False" editable="bottom" context="{'default_mov_id': id}">
                                    <field name="fecha" readonly="1"/>
                                    <field name="debit" readonly="1"/>
                                    <field name="credit" readonly="1"/>
                                    <field name="concepto" readonly="1"/>
                                    <field name="description" readonly="1"/>
                                    <field name="origen" readonly="1"/>
                                </list>
                                <form><p>Información no disponible a través de esta vista</p></form>
                            </field>
                            <group>
                                <group/>
                                <group class="oe_subtotal_footer">
                                    <field name="balance" widget="monetary" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_requisition_general" model="ir.actions.act_window">
        <field name="name">Pagos generales</field>
        <field name="res_model">requisition.general.payments</field>
        <field name="view_mode">list,kanban,form</field>
    </record>

    <record id="view_requisition_general_list" model="ir.ui.view">
        <field name="name">view.requisition.general.list</field>
        <field name="model">requisition.general.payments</field>
        <field name="arch" type="xml">
            <list editable="top" create="1" delete="1" multi_edit="1" string="Pagos generales"  open_form_view="True">
                <field name="partner_id"/>
                <field name="type_comp"/>
                <field name="reference"/>
                <field name="accountbank_id"/>
                <field name="fecha"/>
                <field name="product_id"/>
                <field name="product_template_id" column_invisible="True"/>
                <field name="amount"/>
                <field name="state" readonly="1"/>
            </list>
        </field>
    </record>

    <menuitem id="menu_movimientos" name="Movimientos" groups="group_requisition_admin" parent="reports_menu_root" sequence="20">
        <menuitem id="menu_requisition_bank_account" name="Diario - Cuentas bancarias" action="action_requisition_bank_account" sequence="1"/>
        <menuitem id="menu_requisition_general" name="Pagos Generales" action="action_requisition_general" sequence="5"/>
        <menuitem id="menu_requisition_debt" name="Estado de cuenta" action="action_requisition_debt" sequence="10"/>
    </menuitem>
</odoo>
