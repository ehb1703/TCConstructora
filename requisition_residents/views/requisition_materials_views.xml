<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_requisition_materials" model="ir.actions.act_window">
        <field name="name">Materiales</field>
        <field name="res_model">requisition.materials</field>
        <field name="view_mode">list,kanban,form</field>
    </record>

    <record id="view_requisition_materials_list" model="ir.ui.view">
        <field name="name">view.requisition.materials.list</field>
        <field name="model">requisition.materials</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <list string="Materiales" delete="0">
                <field name="name"/>
                <field name="project_id"/>
                <field name="employee_id"/>
            </list>
        </field>
    </record>

    <record id="view_requisition_materials_form" model="ir.ui.view">
        <field name="name">view.requisition.materials.form</field>
        <field name="model">requisition.materials</field>
        <field name="arch" type="xml">
            <form string="Materiales" delete="0">
                <header>
                    <button string="Enviar" name="action_send" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" invisible="state == 'draft'" readonly="state != 'draft'"/>
                            <field name="project_id"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Productos">
                            <field name="line_ids" widget="one2many_list">
                                <list create="true" delete="true" editable="bottom" context="{'default_req_id': id}">
                                    <field name="req_id" column_invisible="1"/>
                                    <field name="urgencia"/>
                                    <field name="product_id"/>
                                    <field name="product_uom_id" readonly="1"/>
                                    <field name="price_unit"/>
                                    <field name="product_qty"/>
                                    <field name="taxes_id" widget="many2many_tags" options="{'no_open':True, 'no_create':True, 'no_edit':True}"/>
                                    <field name="price_amount"/>
                                    <field name="price_tax"/>
                                    <field name="price_total"/>
                                </list>
                                <form><p>Información no disponible a través de esta vista</p></form>
                            </field>
                        </page>
                        <group>
                            <group/>
                            <group class="oe_subtotal_footer">
                                <field name="amount_untaxed" widget="monetary" readonly="1"/>
                                <field name="amount_tax" widget="monetary" readonly="1"/>
                                <field name="amount_total" widget="monetary" readonly="1"/>
                            </group>
                        </group>
                        <div class="clearfix"/>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <menuitem id="menu_requisition_materials" name="Materiales" action="action_requisition_materials" sequence="20"/>
</odoo>