<odoo>
    <record id="view_crm_lead_form_inherit_convocatorias" model="ir.ui.view">
        <field name="name">view.crm.lead.form.inherit.convocatorias</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='expected_revenue']" position="attributes">
                <attribute name="string">Capital contable</attribute>
            </xpath>

            <xpath expr="//sheet/notebook" position="inside">
                <page string="Nuevas Convocatorias">
                    <group>
                        <group>
                            <field name="zona_geografica_id"/>
                            <!--field name="partner_emisor_id" options="{'no_create_edit': True}"/-->
                            <field name="tipo_obra_id"/>
                            <field name="especialidad_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="monto_min"/>
                            <field name="monto_max"/>
                            <field name="fecha_convocatoria"/>
                            <field name="fecha_limite_inscripcion"/>
                            <field name="fecha_apertura"/>
                        </group>
                    </group>
                    <group string="Documento">
                        <field name="convocatoria_pdf" filename="convocatoria_pdf_name"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>