<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_crm_lead_type" model="ir.actions.act_window">
        <field name="name">Tipo de Venta</field>
        <field name="res_model">crm.lead.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_crm_lead_type_list" model="ir.ui.view">
        <field name="name">view.crm.lead.type.list</field>
        <field name="model">crm.lead.type</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <list string="Tipo de Venta">
                <field name="name"/>
                <field name="bases"/>
                <field name="product_id"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="view_crm_lead_type_from" model="ir.ui.view">
        <field name="name">view.crm.lead.type.from</field>
        <field name="model">crm.lead.type</field>
        <field name="arch" type="xml">
            <form string="Tipo de Venta" delete="0" duplicate="0">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="bases"/>
                        <field name="product_id" required="bases"/>
                        <field name="description"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_crm_stage_type_from" model="ir.ui.view">
        <field name="name">view.crm.stage.type.from</field>
        <field name="model">crm.stage</field>
        <field name="inherit_id" ref="crm.crm_stage_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='team_id']" position="after">
                <field name="origen_ids" widget="many2many_tags"/>
                <field name="email_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

    <record id="action_crm_revert_reason" model="ir.actions.act_window">
        <field name="name">Motivos de cambio de Etapa</field>
        <field name="res_model">crm.revert.reason</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_crm_revert_reason_list" model="ir.ui.view">
        <field name="name">crm.revert.reason.list</field>
        <field name="model">crm.revert.reason</field>
        <field name="arch" type="xml">
            <list string="Motivos de cambio de Etapa">
                <field name="name"/>
                <field name="description"/>
                <field name="tipo"/>
            </list>
        </field>
    </record>

    <record id="view_crm_revert_reason_form" model="ir.ui.view">
        <field name="name">crm.revert.reason.form</field>
        <field name="model">crm.revert.reason</field>
        <field name="arch" type="xml">
            <form string="Motivos de cambio de Etapa">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="tipo"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acci칩n y vistas para cat치logo de Analistas -->
    <record id="action_crm_analyst" model="ir.actions.act_window">
        <field name="name">Analistas</field>
        <field name="res_model">crm.analyst</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_crm_analyst_list" model="ir.ui.view">
        <field name="name">view.crm.analyst.list</field>
        <field name="model">crm.analyst</field>
        <field name="arch" type="xml">
            <list string="Analistas">
                <field name="code" string="ID"/>
                <field name="name"/>
                <field name="origen"/>
                <field name="especialidad_id"/>
                <field name="years_experience"/>
                <field name="quality_analysis"/>
                <field name="quality_documental"/>
                <field name="agility_operativa"/>
                <field name="availability"/>
                <field name="compromiso_institucional"/>
                <field name="proyectos_asignados"/>
                <field name="ultima_evaluacion"/>
            </list>
        </field>
    </record>

    <record id="view_crm_analyst_form" model="ir.ui.view">
        <field name="name">view.crm.analyst.form</field>
        <field name="model">crm.analyst</field>
        <field name="arch" type="xml">
            <form string="Analista">
                <sheet>
                    <group>
                        <group>
                            <field name="code" readonly="1"/>
                            <field name="origen" required="1"/>
                            <field name="employee_id" invisible="origen == 'externo'"/>
                            <field name="partner_id" invisible="origen == 'interno'"/>
                            <field name="name" readonly="1"/>
                            <field name="especialidad_id"/>
                            <field name="years_experience"/>
                        </group>
                        <group string="Evaluaci칩n">
                            <field name="quality_analysis" required="1"/>
                            <field name="quality_documental" required="1"/>
                            <field name="agility_operativa" required="1"/>
                            <field name="availability" required="1"/>
                            <field name="compromiso_institucional" required="1"/>
                            <field name="proyectos_asignados"/>
                            <field name="ultima_evaluacion"/>
                        </group>
                    </group>
                    <group>
                        <field name="observaciones" colspan="4"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_catalog_crm" name="Cat치logos" parent="crm.crm_menu_root" sequence="30" groups="sales_team.group_sale_manager,group_project_catalog">
        <menuitem id="menu_crm_lead_type" name="Origen" action="action_crm_lead_type" sequence="1"/>
        <menuitem id="menu_crm_revert_reason" name="Motivos cambio" action="action_crm_revert_reason" sequence="2"/>
        <menuitem id="menu_crm_analyst" name="Analistas" action="action_crm_analyst" sequence="3"/>
    </menuitem>
</odoo>
