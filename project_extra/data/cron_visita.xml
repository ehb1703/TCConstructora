<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="cron_send_visita_reminders" model="ir.cron">
            <field name="name">Recordatorios Visita de Obra</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="state">code</field>
            <field name="code">model.cron_send_visita_reminders()</field>
            <!-- Ejecutar una vez al día -->
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>

            <field name="active">True</field>
        </record>

        <record id="ir_cron_send_junta_reminders" model="ir.cron">
            <field name="name">Recordatorio junta de aclaración de dudas</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="state">code</field>
            <field name="code">model.cron_send_junta_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>

        <record id="ir_cron_send_junta_dudas_deadline" model="ir.cron">
            <field name="name">Recordatorio fecha límite de dudas (Junta)</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="state">code</field>
            <field name="code">model.cron_send_junta_dudas_deadline()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>

        <record id="ir_cron_send_junta_line_reminders" model="ir.cron">
            <field name="name">Recordatorio Juntas de Aclaración (por línea)</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="state">code</field>
            <field name="code">model.cron_send_junta_line_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>

        <record id="ir_cron_send_junta_line_deadline_reminders" model="ir.cron">
            <field name="name">Recordatorio Fecha Límite Preguntas (por línea)</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="state">code</field>
            <field name="code">model.cron_send_junta_line_deadline_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>
  
    </data>
</odoo>
