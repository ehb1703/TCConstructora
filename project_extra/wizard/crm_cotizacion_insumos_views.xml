<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_crm_cotizacion_insumos_wizard_form" model="ir.ui.view">
        <field name="name">crm.cotizacion.insumos.wizard.form</field>
        <field name="model">crm.cotizacion.insumos.wizard</field>
        <field name="arch" type="xml">
            <form string="Generar cotizaciones de insumos">
                <group>
                    <field name="lead_id" readonly="1"/>
                    <field name="supplier_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="action_confirm" type="object" string="Confirmar" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_order_conf_type" model="ir.ui.view">
        <field name="name">view.order.conf.type</field>
        <field name="model">purchase.confirm.order</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="type_election"/>
                    <field name="ids_order" widget="many2many_tags" readonly="1"/>
                </group>
                <footer>
                    <button string="Confirmar" name="realizar_conf" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-default" special="cancel"/>
                </footer>
           </form>
        </field>
    </record>
</odoo>
