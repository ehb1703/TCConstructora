<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_crm_revert_stage_wizard_form" model="ir.ui.view">
        <field name="name">crm.revert.stage.wizard.form</field>
        <field name="model">crm.revert.stage.wizard</field>
        <field name="arch" type="xml">
            <form string="Revertir etapa">
                <group>
                    <field name="lead_id" readonly="1"/>
                    <field name="target_stage_id" required="1" domain="[('sequence','&lt;', current_stage_sequence), '|', ('team_id','=', current_team_id), ('team_id','=', False)]"/>
                    <field name="reason_id"/>
                    <field name="reason_text"/>
                </group>
                <footer>
                    <button name="action_confirm" type="object" string="Confirmar" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
