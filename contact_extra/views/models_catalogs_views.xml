<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_municipalities" model="ir.actions.act_window">
        <field name="name">Municipios</field>
        <field name="res_model">res.municipalities</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_municipalities_list" model="ir.ui.view">
        <field name="name">view.municipalities.list</field>
        <field name="model">res.municipalities</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <list string="Municipios">
                <field name="codigo"/>
                <field name="municipio"/>
                <field name="state_id"/>
            </list>
        </field>
    </record>

    <record id="view_municipalities_from" model="ir.ui.view">
        <field name="name">view.municipalities.from</field>
        <field name="model">res.municipalities</field>
        <field name="arch" type="xml">
            <form string="Municipios" delete="0" duplicate="0">
                <sheet>
                    <group>
                        <group>
                            <field name="codigo"/>
                            <field name="municipio"/>
                            <field name="state_id" options="{'no_open':1, 'no_create': 1, 'no_edit': 1}"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

