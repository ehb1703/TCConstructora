    <menuitem id="menu_municipalities" name="Municipios" parent="contacts.menu_localisation" action="action_municipalities" sequence="4"/>
    <menuitem id="menu_catalogs_company" name="Catálogos" parent="contacts.res_partner_menu_config" sequence="6"/>
    <menuitem id="menu_type_taxpayer" name="Tipo de Contribuyente" parent="menu_catalogs_company" action="action_type_taxpayer" sequence="1"/>
    <menuitem id="menu_type_supplier" name="Tipo de Proveedor" parent="menu_catalogs_company" action="action_type_supplier" sequence="2"/>
    <menuitem id="menu_classification_supplier" name="Clasificación del Proveedor" parent="menu_catalogs_company" action="action_classification_supplier" sequence="3"/>

    <!-- Menú nuevo en Contabilidad -->
    <menuitem id="menu_catalogs_root" name="Catálogos" parent="accountant.menu_accounting" sequence="5">
        <menuitem id="menu_catalog_expense" name="Catálogo de gastos" action="action_account_catalog_expense" sequence="10"/>
    </menuitem>
