<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_account_extra_form" model="ir.ui.view">
        <field name="name">view.account.account.extra.form</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='accounting']/group[1]" position="after">
                <group>
                    <group>
                        <field name="parent_id"/>
                        <field name="naturaleza"/>
                        <field name="level"/>
                    </group>
                    <group>
                        <field name="is_afectable"/>
                        <field name="sat_code"/>
                        <field name="nif_code"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_res_partner_bank_extra_form" model="ir.ui.view">
        <field name="name">view.res.partner.bank.extra.form</field>
        <field name="model">res.partner.bank</field>
        <field name="inherit_id" ref="account.view_partner_bank_form_inherit_account"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="no_tarjeta"/>
            </xpath>
            <xpath expr="//field[@name='allow_out_payment']" position="before">
                <field name="type_pay"/>
            </xpath>
        </field>
    </record>

</odoo>

