<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_default_code_from" model="ir.ui.view">
        <field name="name">view.default_code.from</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook/page[@name='general_information']/group/group[@name='group_general']/field[@name='product_tooltip']" position="after">
                <field name="type_supply"/>
                <field name="budget_id" invisible="not sale_ok"/>
            </xpath>
        </field>
    </record>

    <record id="view_product_combo_from" model="ir.ui.view">
        <field name="name">view.product.combo.from</field>
        <field name="model">product.combo</field>
        <field name="inherit_id" ref="product.product_combo_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='combo_item_ids']" position="before">
                <field name="base_price" string="Precio" readonly="1"/>
                <field name="combo_line_ids" string="BÃ¡sicos" context="{'default_combo_id': id}">
                    <list>
                        <field name="combos_id"/>
                        <field name="lst_price"/>
                        <field name="combo_qty"/>
                        <field name="price"/>
                    </list>
                    <form>
                        <group>
                            <field name="combos_id" options="{'no_open':True, 'no_create':True, 'no_edit':True}"/>
                            <field name="lst_price" readonly="1"/>
                            <field name="combo_qty"/>
                            <field name="price"/>
                        </group>
                    </form>
                </field>
            </xpath>

            <xpath expr="//field[@name='combo_item_ids']/list/field[@name='product_id']" position="after">
                <field name="combo_qty"/>
            </xpath>
        </field>
    </record>

</odoo>
